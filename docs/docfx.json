{
  "$schema": "https://raw.githubusercontent.com/dotnet/docfx/main/schemas/docfx.schema.json",
  "metadata": [
    {
      "src": [
        {
          "src": "../src",
          "files": [
            "**/*.csproj"
          ]
        }
      ],
      "dest": "api",
      "filter": "filter.yml",
      "properties": {
        "TargetFramework": "net10.0"
      },
      "disableGitFeatures": true
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "api/**.yml",
          "api/index.md"
        ]
      },
      {
        "files": [
          "articles/**.md",
          "articles/**/toc.yml",
          "changelog/toc.yml",
          "changelog/*.md",
          "toc.yml",
          "*.md"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**",
          "logo/**"
        ]
      }
    ],
    "dest": "_site",
    "globalMetadataFiles": [],
    "fileMetadataFiles": [],
    "template": [
      "default",
      "modern",
      "template"
    ],
    "xrefService": [
      "https://xref.docs.microsoft.com/query?uid={uid}"
    ],
    "markdownEngineName": "markdig",
    "noLangKeyword": false,
    "keepFileLink": false,
    "cleanupCacheHistory": false,
    "disableGitFeatures": false,
    "globalMetadata" :
    {
      "_appTitle" : "OPC UA Solutions .NET",
      "_appFooter" : "Copyright &copy; 2026 Technosoftware GmbH",
      "_appLogoPath" : "logo/TechnosoftwareGmbH.png",
      "_appFaviconPath": "logo/TechnosoftwareT.png",
      "_enableSearch": true,
      "_disableContribution": true
    },
    "sitemap":
    {
      "baseUrl": "https://technosoftware.com/",
      "priority": 0.8,
      "changefreq": "monthly",
      "fileOptions":{
          "**/articles/**": {
              "priority": 0.8
          },
          "**/changelog/**": {
              "priority": 0.5
          },
          "**/api/**": {
              "priority": 0.3
          }
      }
    }
  }
}